{
    "name": "indigophp/http-adapter",
    "description": "Provides adapters for common HTTP Client libraries",
    "license": "MIT",
    "keywords": ["http", "client", "adapter"],
    "homepage": "https://indigophp.com",
    "authors": [
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "psr/http-message": "~0.3.0"
    },
    "require-dev": {
        "kriswallsmith/buzz": "v0.13",
        "guzzle/guzzle": "~3.9.0",
        "guzzlehttp/guzzle": "~4.2.0"
    },
    "require-dev": {
        "codeception/codeception": "~2.0.0"
    },
    "autoload": {
        "psr-4": {
            "Indigo\\Http\\": "src/"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
